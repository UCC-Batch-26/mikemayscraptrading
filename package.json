{
  "name": "mikemayscraptrading",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "cd server && pnpm run dev",
    "client": "cd client && pnpm start",
    "install-all": "pnpm install && cd client && pnpm install && cd ../server && pnpm install",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,md}\"",
    "prettier": "prettier --check \"apps/**/*.{js,jsx,md}\"",
    "check": "pnpm lint && pnpm prettier",
    "fix": "pnpm lint && pnpm format",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "environment": "turbo run env"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=18"
  }
}
